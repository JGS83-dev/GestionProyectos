@model IEnumerable<GestionProyectos.Models.Asignaciones>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<form asp-asp-controller="Asignaciones" asp-action="Index" method="get">
    <p>
        Proyecto: <input type="text" name="textoABuscar" class="form-control" />
        <input type="submit" value="Filtrar" class="btn btn-info" />
    </p>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FechaAsignacion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Proyectos)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Empleados)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RolesProyecto)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FechaAsignacion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Proyectos.DescripcionProyecto)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Empleados.ApellidoEmpleado)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RolesProyecto.Id)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
